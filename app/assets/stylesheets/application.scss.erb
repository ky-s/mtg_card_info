@import "bootstrap";
@import "lightbox";

html{
  height: 100%;
}
body{
  height: 100%;
}

div.background {
  height: auto;
  min-height: 100%;
  width: 100%;
  background-size: cover;
  background-repeat: no-repeat;
  background-attachment: fixed;
}

<% Dir.foreach(Rails.root.join(*%w(app assets images background))).reject { |file| %w(. ..).include?(file) }.each_with_index do |file, i| %>
div#background_<%= i %> { background-image: image-url("background/<%= file %>"); }
<% end %>

div#content {
  height: auto;
  min-height: 100%;
  background-color: rgba(255, 255, 255, 0.5);
}

span.mtg_card_container {
  position: relative;
}

