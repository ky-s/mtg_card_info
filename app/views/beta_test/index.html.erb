<h1>BetaTest#index</h1>
<p>Find me in app/views/beta_test/index.html.erb</p>
    

<div class="progress">
  <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%"></div>
</div>

<% @set = MtgSet.find_by(code: 'ktk') %>
<script>
  setInterval(function() {
    $.ajax({
      url: '/set/fetch_cards_image_progress',
      type: 'GET',
      data: ( 'set=<%= @set.code %>&percent=' + $('.progress-bar').val() ),
      processData: false,
      contentType: false,
      dataType: 'json',
      success: function(res) {
        console.log(res);
        $('.progress-bar').css('width', res.percent+'%').attr('aria-valuenow', res.percent).val(res.percent);
      }
    })
  }, 1000);
</script>
