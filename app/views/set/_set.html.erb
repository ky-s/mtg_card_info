<h3 id="<%= type %>" style="padding-top: 60px"><%= type %></h3>
<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th style="width: 20%">Set Name</th>
      <th style="width: 5%">Code</th>
      <th style="width: 10%">Release Date</th>
      <th style="width: 7%">Fetch</th>
      <th style="width: 8%">Image Fetch</th>
      <th style="width: 10%">Card List</th>
      <th style="width: 5%"></th>
      <th style="width: 5%"></th>
      <th style="width: 5%"></th>
    </tr>
  </thead>
  <tbody>
    <% sets&.each do |set| %>
      <tr id="<%= set.code %>">
        <%= content_tag :td, simple_format(set.name) %>
        <%= content_tag :td, simple_format(set.code, class: 'badge badge-info') %>
        <%= content_tag :td, set.release_date %>
        <%= content_tag :td, fetch(set), class: 'fetch' %>
        <%= content_tag :td, fetch_image(set), class: 'fetch_image' %>
        <%= content_tag :td, link_to('Card List', set_show_path(set: set.code), class: 'btn btn-sm btn-primary m-2') %>
        <% if set.has_booster? %>
          <%= content_tag :td, link_to('Get Booster Pack', booster_show_path(set: set.code), class: 'btn btn-sm btn-success get_booster m-2') %>
          <%= content_tag :td, link_to('Get 24 Packs!', booster_show_path(set: set.code, num: 24), class: 'btn btn-sm btn-warning get_booster m-2') %>
          <%= content_tag :td, link_to('Get 36 Packs!', booster_show_path(set: set.code, num: 36), class: 'btn btn-sm btn-danger get_booster m-2') %>
        <% else %>
          <%= content_tag :td %>
          <%= content_tag :td %>
          <%= content_tag :td %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
